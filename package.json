{
  "name": "code-review-cli",
  "version": "0.1.0",
  "description": "CLI tool for AI-powered code review of git commits using multiple LLM providers",
  "main": "src/index.js",
  "bin": {
    "crc": "./bin/crc.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\""
  },
  "keywords": [
    "code-review",
    "cli",
    "ai",
    "llm",
    "git",
    "code-analysis"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@babel/parser": "^7.23.0",
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "openai": "^4.20.0",
    "ora": "^5.4.1",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0"
  }
}

